---
const links = [
    {
        name: 'Home',
        link: '/'
    },
    {
        name: 'About',
        link: '/about'
    },
    {
        name: 'Contact us',
        link: '/contact'
    }
]
---

<header>
    <img class="logo" src="/rms-logo.svg" alt="RMS">
    <ul class="navigation">
        {links.map(link => 
            <li>
                <a href={link.link}>{link.name}</a>
            </li>
        )}
    </ul>
    <div class="burgerMenu">
        X
    </div>
</header>

<style>
    .navigation {
        display: none;
    }
    .burgerMenu {
        display: block;
    }
    header {
        position: sticky;
        top: 0;
        z-index: 100;
        width: 100%;
        height: 15vh;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #96c3ca;
    }
    ul {
        font-size: 2rem;
        display: flex;
        gap: 12rem;
        list-style-type: none;
        padding-right: 12rem;
    }
    li {
        cursor: pointer;
    }
    li:hover {
        color: white;
    }
    a {
        color: black;
        text-decoration: none;
    }
    .logo {
        height: 100%;
    }
</style>